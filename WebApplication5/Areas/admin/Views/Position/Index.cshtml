@model List<Position>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg6">
            <a asp-area="admin" asp-controller="position" asp-action="Create" class="btn btn-danger">Create</a> 
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Position</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0;}
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Name</td>
                            <td>
                                <a asp-area="admin" asp-controller="position" asp-action="update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                <a asp-area="admin" asp-controller="position" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('EminSiniz?')" class="btn btn-danger">Delete</a>

                            </td>

                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>

